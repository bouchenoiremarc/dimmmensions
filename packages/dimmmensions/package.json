{
  "name": "dimmmensions",
  "version": "2.2.0",
  "description": "A collection of dimensions from iOS and iPadOS devices.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/dimmmensions",
  "homepage": "https://marcbouchenoire.com/projects/dimmmensions",
  "keywords": [
    "ios",
    "ipados",
    "safe area",
    "guides"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/dimmmensions.js",
  "unpkg": "./dist/dimmmensions.umd.js",
  "module": "./dist/dimmmensions.module.js",
  "exports": {
    ".": {
      "require": "./dist/dimmmensions.js",
      "import": "./dist/dimmmensions.modern.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.mjs": [
      "eslint --fix",
      "yarn prettier"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json",
      "yarn prettier"
    ],
    "**/*.{json,md,yml}": [
      "yarn prettier"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "microbundle --tsconfig tsconfig.build.json",
    "prettier": "prettier --write --loglevel silent --ignore-path .eslintignore",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{mjs,ts,tsx}' --fix",
    "lint:prettier": "yarn prettier '**/*.{mjs,ts,tsx,json,md,yml}'",
    "lint:tsc": "tsc --project tsconfig.json",
    "generate": "tsm scripts/generate.ts && yarn prettier 'src/data/*.json'",
    "prepublishOnly": "yarn build",
    "test": "uvu --require tsm tests",
    "test:coverage": "c8 --include=src yarn test && c8 report --reporter=lcov"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/listr": "^0.14.4",
    "app-exists": "^2.1.1",
    "c8": "^7.10.0",
    "command-exists": "^1.2.9",
    "execa": "^6.0.0",
    "globby": "^12.0.2",
    "listr": "^0.14.3",
    "load-json-file": "^7.0.1",
    "microbundle": "^0.14.2",
    "uvu": "^0.5.2",
    "write-json-file": "^5.0.0"
  }
}
