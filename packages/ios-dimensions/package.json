{
  "name": "ios-dimensions",
  "version": "2.1.0",
  "description": "A collection of dimensions from iOS devices.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/bouchenoiremarc/ios-dimensions",
  "homepage": "https://marcbouchenoire.com/projects/ios-dimensions",
  "keywords": [
    "ios",
    "dimensions",
    "layout",
    "guides"
  ],
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/ios-dimensions.js",
  "unpkg": "./dist/ios-dimensions.umd.js",
  "module": "./dist/ios-dimensions.module.js",
  "exports": {
    ".": {
      "require": "./dist/ios-dimensions.js",
      "import": "./dist/ios-dimensions.modern.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsc-mixed --project tsconfig.json",
      "prettier --write"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "microbundle --tsconfig tsconfig.build.json",
    "clean": "jest --clearCache && rimraf dist node_modules",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{ts,tsx}' --fix",
    "lint:prettier": "prettier --write '**/*.{ts,tsx}' --loglevel silent",
    "lint:tsc": "tsc --project tsconfig.json",
    "generate": "node -r @swc-node/register scripts/generate.ts",
    "prepare": "rimraf dist && yarn build",
    "prepublishOnly": "yarn test",
    "test": "jest"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.3.3",
    "@swc-node/register": "^1.3.6",
    "@types/command-exists": "^1.2.0",
    "@types/jest": "^27.0.1",
    "@types/listr": "^0.14.2",
    "app-exists": "^1.1.0",
    "command-exists": "^1.2.9",
    "execa": "^5.0.0",
    "globby": "^12.0.2",
    "jest": "^27.0.6",
    "listr": "^0.14.3",
    "load-json-file": "^6.2.0",
    "microbundle": "^0.13.0",
    "write-json-file": "^4.3.0"
  }
}
