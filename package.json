{
  "name": "",
  "private": true,
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "*.{json,md,yml}": [
      "yarn prettier"
    ],
    "packages/dimmmensions/**/*.mjs": [
      "yarn workspace dimmmensions eslint --fix",
      "yarn workspace dimmmensions prettier"
    ],
    "packages/dimmmensions/**/*.{ts,tsx}": [
      "yarn workspace dimmmensions eslint --fix",
      "yarn workspace dimmmensions tsatsiki --project tsconfig.json",
      "yarn workspace dimmmensions prettier"
    ],
    "packages/dimmmensions/**/*.{json,md}": [
      "yarn workspace dimmmensions prettier"
    ],
    "packages/site/**/*.{cjs,mjs}": [
      "yarn workspace site eslint --fix",
      "yarn workspace site prettier"
    ],
    "packages/site/**/*.{ts,tsx}": [
      "yarn workspace site eslint --fix",
      "yarn workspace site tsatsiki --project tsconfig.json next-env.d.ts declarations.d.ts",
      "yarn workspace site prettier"
    ],
    "packages/site/**/*.css": [
      "yarn workspace site stylelint --fix",
      "yarn workspace site prettier"
    ],
    "packages/site/**/*.{json,md}": [
      "yarn workspace site prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "site:dev": "yarn workspace site dev",
    "site:build": "yarn workspace site build",
    "site:publish": "yarn build && yarn site:build",
    "prettier": "prettier --write --loglevel silent --ignore-path .gitignore",
    "generate": "yarn workspace dimmmensions generate",
    "build": "yarn workspace dimmmensions build",
    "test": "yarn workspace dimmmensions test",
    "test:coverage": "yarn workspace dimmmensions test:coverage",
    "lint": "yarn prettier '*.{json,md,yml}' && lerna run lint --stream",
    "release": "yarn test && lerna publish"
  },
  "devDependencies": {
    "@marcbouchenoire/eslint-config": "^2.7.0",
    "@marcbouchenoire/prettier-config": "^1.1.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.18.0",
    "husky": "4.3.8",
    "lerna": "^5.1.6",
    "nano-staged": "^0.8.0",
    "prettier": "^2.7.1",
    "tsatsiki": "^2.0.1",
    "tsm": "^2.2.1",
    "typescript": "^4.7.4"
  }
}
